<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_width="@dimen/accessibility_touch_target_min_size"
        android:layout_height="@dimen/accessibility_touch_target_min_size"
        android:id="@+id/run_review_switch_sensor_btn_prev"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/run_review_switch_sensor_btn_prev"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
    />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/run_review_switch_sensor_btn_prev"
        android:layout_toStartOf="@+id/run_review_switch_sensor_btn_next"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensor_icon"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/run_review_sensor_name"
            android:textSize="@dimen/run_review_sensor_name_text_size"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_color_black"
            android:ellipsize="end"
            android:singleLine="true"
        />

    </LinearLayout>

    <ImageButton
        android:layout_width="@dimen/accessibility_touch_target_min_size"
        android:layout_height="@dimen/accessibility_touch_target_min_size"
        android:id="@id/run_review_switch_sensor_btn_next"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/run_review_switch_sensor_btn_next"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
    />

</merge>