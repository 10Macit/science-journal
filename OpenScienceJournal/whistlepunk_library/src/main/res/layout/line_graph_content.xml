<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/fragment_main">

    <ProgressBar
        android:id="@+id/chart_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:contentDescription="@string/graph_loading"
        />

    <com.google.android.apps.forscience.whistlepunk.scalarchart.LineGraphOverlay
        android:id="@+id/chart_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/chart_margin_size_left"
        />

    <FrameLayout
        android:id="@+id/chart_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>

</merge>