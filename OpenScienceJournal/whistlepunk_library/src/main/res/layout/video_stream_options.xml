<?xml version="1.0" encoding="utf-8"?>
<!-- TOOD: When we have a spec for options, consider using gridlayout or tablelayout
     to create this options view. -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/options_padding_sides"
        android:paddingRight="@dimen/options_padding_sides"
        android:paddingTop="@dimen/options_padding_top_bottom"
        android:paddingBottom="@dimen/options_padding_top_bottom"
    >

        <TextView
            android:id="@+id/video_stream_fps_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_stream_fps_option"
            android:labelFor="@+id/video_stream_fps_seek_bar"
            />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_stream_fps_seek_bar"
            android:layout_below="@+id/video_stream_fps_label_view"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/video_stream_fps_seek_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_stream_fps_seek_text"
            android:inputType="numberDecimal"
            android:layout_alignTop="@+id/video_stream_fps_label_view"
            android:layout_alignEnd="@+id/video_stream_fps_label_view" />

</RelativeLayout>