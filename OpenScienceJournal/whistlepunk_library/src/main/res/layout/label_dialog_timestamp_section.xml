<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_height="@dimen/run_review_divider_thickness"
        android:layout_width="match_parent"
        android:background="@color/run_review_divider_color"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_note_bottom_time_height"
        android:layout_marginStart="@dimen/edit_note_dialog_margin"
        android:layout_marginEnd="@dimen/edit_note_dialog_margin"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edit_note_time"
            android:drawableStart="@drawable/ic_schedule_grey600_24dp"
            android:drawablePadding="@dimen/edit_note_time_drawable_padding"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color_dark_grey"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

    <View
        android:layout_height="@dimen/run_review_divider_thickness"
        android:layout_width="match_parent"
        android:background="@color/run_review_divider_color"
        />

</merge>